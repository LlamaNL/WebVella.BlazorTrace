@namespace WebVella.BlazorTrace
@using WebVella.BlazorTrace.Utility

@if (Item is not null)
{
	<tr @key=@Item.Id class="@Class">
		<td class="button">
			@if (Item.IsBookmarked)
			{
				<button type="button" class="icon bookmarked" title="clear filters" @onclick=_onBookmark>
					<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
						<path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
					</svg>
				</button>
			}
			else
			{
				<button type="button" class="icon" @onclick=_onBookmark>
					<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
						<path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z" />
					</svg>
				</button>
			}
		</td>
		<td title="module / assembly short name">@Item.Module</td>
		<td title="@Item.ComponentFullName">
			<span>@Item.Component</span>
			@if (!String.IsNullOrWhiteSpace(Item.InstanceTag))
			{
				<span class="wv-trace-modal__divider"></span>

				<span class="wv-tag" title="tag">@Item.InstanceTag</span>
			}
		</td>
		<td title="method name">@Item.Method</td>
		<td title="view details" class="clickable" @onclick=_onTraceListView>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
					<path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5" />
					<path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z" />
				</svg>
			</div>
			<div class="wv-data">
				<div>@Item.TraceList.Count</div>
				<div>@((MarkupString)Item.MethodComparison.TraceListChangeHtml)</div>
			</div>
		</td>
		<td title="view details" class="clickable" @onclick=_onMemoryView>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
					<path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5" />
					<path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z" />
				</svg>
			</div>
			<div class="wv-data">
				<div>@(Item.LastMemoryBytes is not null ? Item.LastMemoryBytes.ToKilobytesString() : "n/a")</div>
				<div>@((MarkupString)Item.MemoryComparison.LastMemoryChangeKBHtml)</div>
			</div>
		</td>
		<td>
			<div class="wv-data">
				<div>@(Item.LastDurationMS is not null ? $"{Item.LastDurationMS} ms" : "n/a")</div>
				<div>@((MarkupString)Item.MethodComparison.LastDurationChangeMSHtml)</div>
			</div>
		</td>
		<td title="@Item.LimitsHint" class="clickable" @onclick=_onLimitView>
			<div class="icon">
				<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
					<path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5" />
					<path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z" />
				</svg>
			</div>
			<div class="wv-limits">@((MarkupString)Item.LimitsHtml)</div>
		</td>
	</tr>

}
@code {
	[Parameter] public string? Class { get; set; }
	[Parameter] public WvMethodTraceRow? Item { get; set; }
	[Parameter] public EventCallback<WvMethodTraceRow> OnTraceListView { get; set; }
	[Parameter] public EventCallback<WvMethodTraceRow> OnMemoryView { get; set; }
	[Parameter] public EventCallback<WvMethodTraceRow> OnBookmark { get; set; }
	[Parameter] public EventCallback<WvMethodTraceRow> OnLimitView { get; set; }

	private async Task _onTraceListView() => await OnTraceListView.InvokeAsync(Item);

	private async Task _onMemoryView() => await OnMemoryView.InvokeAsync(Item);
	private async Task _onBookmark() => await OnBookmark.InvokeAsync(Item);
	private async Task _onLimitView() => await OnLimitView.InvokeAsync(Item);
}