@namespace WebVella.BlazorTrace
@using WebVella.BlazorTrace.Utility
@inherits WvBlazorTraceComponentBase
@if (Row is not null)
{
	<div title="click to close (Esc)" class="wv-trace-overlay secondary" @onclick=_hide></div>
	<div class="wv-trace-modal secondary">
		<div class="wv-trace-modal__header">
			<div class="wv-trace-modal__header__left" style="flex:1 1 auto;">@((MarkupString)_getTitle())</div>
			<div class="wv-trace-modal__header__right">
				<button title="Close (Esc)" type="button" class="circle icon" @onclick=_hide>X</button>
			</div>
		</div>
		<div class="wv-trace-modal__body">
			<table>
				<thead>
					<tr>
						<th>memory</th>
						<th>change</th>
						<th>assembly</th>
						<th>field</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Row.MemoryComparison.Fields.OrderByDescending(x=> x.SecondarySnapshotBytes))
					{
						<tr @key="@Guid.NewGuid()">
							<td class="number">@item.SecondarySnapshotBytes.ToKilobytesString()</td>
							<td class="number">@((MarkupString)item.ChangeKBHtml)</td>
							<td>@item.AssemblyName</td>
							<td>@item.FieldName</td>
						</tr>
					}

					@if (Row.TraceList.Count == 0)
					{
						<tr>
							<td colspan="4" style="padding:30px;text-align:center;">No tracers are logged yet for this method</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
}





